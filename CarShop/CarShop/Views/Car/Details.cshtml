@model Car
<link rel="stylesheet" href="~/css/DetailsStyle.css">

<h3 class="my-5">
    @Model.Name
</h3>

<div class="row gx-5">
    <img src="@Url.Content("~/images/" + @Model.ImageURL)" class="card-img-top" alt="@Model.Name">
    <div class="col-7">
        <h4>@Model.Name</h4>
        <h3 class="pull-right">@Model.Price</h3>
        <div class="addToCart">
            <p class="button">

            </p>
        </div>
    </div>
</div>
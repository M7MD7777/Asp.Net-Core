@model Car

<div class="col">
    <div class="card car-card">
        <img src="@Url.Content("~/images/" + @Model.ImageURL)" class="card-img-top" alt="@Model.Name">







        <div class="card-body car-button">
            <h4 class="d-grid">
            </h4>
            <h4 class="d-grid">
                <a class="btn btn-secondary"
                   asp-controller="ShoppingCart"
                   asp-action="AddToShoppingCart"
                   asp-route-carId="@Model.CarId"> + Add to cart</a>
            </h4>

            <div class="d-flex justify-content-between mt-2">
                <h2 class="text-start">
                    <a class="car-link" asp-controller="Car" asp-action="Details" asp-route-id="@Model.CarId">@Model.Name</a>
                </h2>
                <h5 class="text-nowrap">
                    @Model.Price.ToString("c")
                </h5>
            </div>
        </div>
    </div>
</div>